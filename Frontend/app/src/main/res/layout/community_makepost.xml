<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Community.MakePostActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/community_back"
        android:fillViewport="true"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Top_body">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <TextView
                android:id="@+id/makepost_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="게시글 제목"
                android:textColor="#111111"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/edit_text_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_round"
                android:gravity="top|start"
                android:hint="제목을 입력해주세요."
                android:inputType="textMultiLine"
                android:overScrollMode="ifContentScrolls"
                android:padding="14dp"
                android:textColorHint="#9E9E9E"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/makepost_title" />


            <TextView
                    android:id="@+id/makepost_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="게시글 본문"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edit_text_title" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#818181" />

            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_text_initial_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="공유하고 싶은 내용을 적어주세요."
                    android:textColor="@color/black"
                    android:inputType="textMultiLine"
                    android:minHeight="150dp"
                    android:textColorHint="#9E9E9E" />

            </LinearLayout>

            <Button
                android:id="@+id/button_add_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:backgroundTint="#333333"
                android:layout_marginTop="25dp"
                android:text="첨부 파일 추가"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/makepost_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="카테고리 (※미선택 시 전체에서만 볼 수 있습니다.) "
                android:textColor="#111111"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_add_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_input_round">

                <CheckBox
                    android:id="@+id/checkbox_recycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분리수거"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/checkbox_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="업사이클링 마켓"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/checkbox_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="캠페인/이벤트"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/checkbox_qna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q&amp;A"
                    android:textColor="#000000" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Top_body"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/top_body_shadow">

        <TextView
            android:id="@+id/makepost_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="게시글 작성하기"
            android:textColor="#111111"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/button_complete"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="완료"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/makepost_post"
            app:layout_constraintBottom_toBottomOf="@id/makepost_post"
            app:strokeColor="#AAAAAA" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>