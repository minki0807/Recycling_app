<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        android:paddingBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/text_profile_initial"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/background_profile_initial" />

            <TextView
                android:id="@+id/mypage_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="닉네임"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/text_profile_initial"
                app:layout_constraintStart_toEndOf="@id/text_profile_initial"
                app:layout_constraintTop_toTopOf="@id/text_profile_initial" />

            <LinearLayout
                android:id="@+id/post_list_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/text_profile_initial" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#EAEAEA" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="4dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="4dp">

                    <Button
                        android:id="@+id/mypost"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="작성글"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/mycommentpost"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="댓글단 글"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/mylikepost"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="좋아요한 글"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/community_item_post" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>